                <ColumnDefinition x:Name="RightTitleBar" MinWidth="101" Width="101" />
            </Grid.ColumnDefinitions>

            <!-- Left Title Bar -->
            <StackPanel Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Left">

