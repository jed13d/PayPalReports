                        </Image.Source>
                    </Image>
                </Button>
                <Button x:Name="closeApplicationButton" Click="TitleBar_CloseButtonClick" Style="{StaticResource ButtonContextStyle}" Margin="0,0,5,0">
                    <Image Height="13" Width="13" Margin="5,0,5,0">
                        <Image.Source>
                            <DrawingImage x:Name="closeDrawingImage">
                                <DrawingImage.Drawing>
                                    <DrawingGroup ClipGeometry="M0,0 V24 H24 V0 H0 Z">
                                        <DrawingGroup Opacity="1">
                                            <DrawingGroup Opacity="1">
                                                <GeometryDrawing>
                                                    <GeometryDrawing.Pen>
                                                        <Pen Brush="{StaticResource Button.Static.Foreground}" Thickness="1.5" StartLineCap="Round" EndLineCap="Round" LineJoin="Miter" MiterLimit="1" />
                                                    </GeometryDrawing.Pen>
                                                    <GeometryDrawing.Geometry>
                                                        <LineGeometry StartPoint="16.9999,7" EndPoint="7,16.9999" />
                                                    </GeometryDrawing.Geometry>
                                                </GeometryDrawing>
                                                <GeometryDrawing>
                                                    <GeometryDrawing.Pen>
                                                        <Pen Brush="{StaticResource Button.Static.Foreground}" Thickness="1.5" StartLineCap="Round" EndLineCap="Round" LineJoin="Miter" MiterLimit="1" />
                                                    </GeometryDrawing.Pen>
                                                    <GeometryDrawing.Geometry>
                                                        <LineGeometry StartPoint="7.0001,7" EndPoint="17,16.9999" />
                                                    </GeometryDrawing.Geometry>
                                                </GeometryDrawing>
                                            </DrawingGroup>
                                        </DrawingGroup>
                                    </DrawingGroup>
                                </DrawingImage.Drawing>
                            </DrawingImage>
                        </Image.Source>
                    </Image>
                </Button>
            </StackPanel>

        </Grid>

        <!-- Main / Body -->
        <DockPanel Background="#1f1f1f" LastChildFill="True" Margin="5,0,5,5">
            
            <!-- Tabs -->
            <ListBox x:Name="TabRow" DockPanel.Dock="Top" SelectionMode="Single" HorizontalAlignment="Left" Height="32" Style="{StaticResource ListBoxTabRowStyle}" SelectionChanged="ListBoxTabs_SelectionChanged">
                <local:NavTab Style="{DynamicResource ListBoxItemTabStyle}" HorizontalAlignment="Center" NavLink="/Pages/ReportsPage.xaml">
                    Reports
                </local:NavTab>
                <local:NavTab Style="{DynamicResource ListBoxItemTabStyle}" HorizontalAlignment="Center" NavLink="/Pages/PayPalConfigurationPage.xaml">
                    Configuration
                </local:NavTab>
            </ListBox>

            <!-- Bottom Status Bar-->
            <TextBlock x:Name="StatusTextBlock" DockPanel.Dock="Bottom" Style="{StaticResource TextBlockStatusStyle}" Text="Sample&#x0a;text&#x0a;text" />

            <!-- Content -->
            <Frame x:Name="ContentFrame" NavigationUIVisibility="Hidden" Background="Fuchsia" />
        </DockPanel>
    </DockPanel>
</Window>
