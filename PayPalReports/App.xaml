<Application x:Class="PayPalReports.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:PayPalReports"
             StartupUri="MainWindow.xaml">
    <Application.Resources>

        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles/Buttons.xaml" />
                <ResourceDictionary Source="/Styles/ListBoxes.xaml" />
                <ResourceDictionary Source="/Styles/Menus.xaml" />
                <ResourceDictionary Source="/Styles/TextBlocks.xaml" />
                <ResourceDictionary Source="/Styles/TextBoxes.xaml" />
            </ResourceDictionary.MergedDictionaries>
            
            <SolidColorBrush x:Key="Standard.Static.Background" Color="#FF1F1F1F"/>
            <SolidColorBrush x:Key="Standard.Static.Border" Color="#FF1F1F1F"/>
            <SolidColorBrush x:Key="Standard.Static.Foreground" Color="#FF9C9C9C"/>
            <SolidColorBrush x:Key="FrogIcon.Static.Foreground" Color="#FFAADDAA"/>
            
        </ResourceDictionary>
        
    </Application.Resources>
</Application>
